{
    "target_dataset": {
        "name": "sst-2",
        "dev_rate": 0.1
    },
    "poison_dataset": {
        "name": "sst-2",
        "dev_rate": 0.1
    },
    "victim": {
        "type": "plm",
        "model": "bert",
        "path": "bert-base-uncased",
        "num_classes": 2,
        "device": "gpu",
        "max_len": 512
    },
    "attacker": {
        "name": "dd",
        "metrics": [
            "accuracy"
        ],
        "train": {
            "name": "base",
            "lr": 2e-5,
            "weight_decay": 0,
            "epochs": 5,
            "batch_size": 32,
            "warm_up_epochs": 3,
            "ckpt": "best",
            "save_path": "./models"
        },
        "poisoner": {
            "name": "badnets",
            "poison_rate": 0.1,
            "target_label": 1,
            "label_consistency": false,
            "label_dirty": true,
            "triggers": [
                "cf"
            ],
            "num_triggers": 1,
            "save": false,
            "load": false
        }
    },
    "defender": {
        "name": "strip",
        "repeat": 5,
        "swap_ratio": 0.5,
        "frr": 0.01,
        "batch_size": 32,
        "use_oppsite_set": false
    },
    "clean-tune": false
}